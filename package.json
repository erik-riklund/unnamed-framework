{
  "private": true,
  "dependencies": {
    "chalk": "^5.4.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "npm-run-all": "^4.1.5",
    "sass": "^1.88.0",
    "wait-on": "^8.0.3"
  },
  "peerDependencies": {
    "bun": "latest"
  },
  "scripts": {
    "build": "bun run './core/build.ts'",
    "build-dev": "bun run --watch './core/build.ts'",
    "serve": "bun run './core/index.ts'",
    "serve-dev": "wait-on './runtime/routes.ts' && bun run --watch './core/index.ts'",
    "start": "npm-run-all build serve",
    "start-dev": "npm-run-all --parallel build-dev serve-dev"
  }
}