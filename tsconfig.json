{
  "compilerOptions":
  {
    "paths": {
      "api": [
        "./app/routes/api/*.ts",
        "./app/routes/api/*"
      ],
      "app/*": [
        "./app/*.ts",
        "./app/*"
      ],
      "core": [
        "./core/index.ts",
      ],
      "core/*": [
        "./core/*.ts",
        "./core/*"
      ],
      "library/*": [
        "./library/*.ts",
        "./library/*"
      ],
      "module/*": [
        "./modules/*/index.ts",
        "./modules/*"
      ],
      "route/*": [
        "./app/routes/*.ts",
        "./app/routes/*"
      ],
      "runtime/*": [
        "./runtime/*.ts",
        "./runtime/*.js",
        "./runtime/*"
      ],
      "task/*":[
        "./core/build/tasks/*.ts",
        "./core/build/tasks/*"
      ],
      "types/*": [
        "./modules/*/types.d.ts",
        "./*/types.d.ts"
      ],
      "ui/*": [
        "./app/ui/*.fml",
        "./app/ui/*"
      ]
    },

    "allowJs": true,

    "lib": [ "ESNext", "DOM" ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "noPropertyAccessFromIndexSignature": false
  },

  "exclude": [ "node_modules" ]
}